{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}"
                        class="btn btn-primary"><i class="fa fa-check-circle"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i
                            class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <i class="fa fa-exclamation-circle"></i>
                {{ error_warning }}
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-affiliate-payout"
                      class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="input-affiliate-payout-status">{{ entry_status }}</label>
                        <div class="col-sm-10">
                            <select name="module_affiliate_payout_status" id="input-affiliate-payout-status"
                                    class="form-control">
                                {% if module_affiliate_payout_status %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-affiliate-payout-email"><span
                                    data-toggle="tooltip"
                                    title="{{ help_admin_notification }}">{{ entry_admin_notification }}</span></label>
                        <div class="col-sm-10">
                            <select name="module_affiliate_payout_email" id="input-affiliate-payout-email"
                                    class="form-control">
                                {% if module_affiliate_payout_email %}
                                    <option value="1" selected="selected">{{ text_yes }}</option>
                                    <option value="0">{{ text_no }}</option>
                                {% else %}
                                    <option value="1">{{ text_yes }}</option>
                                    <option value="0" selected="selected">{{ text_no }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-meta-title"><span data-toggle="tooltip" title="{{ help_min_withdraw }}">{{ entry_min_withdraw }}</span></label>
                        <div class="col-sm-10">
                            <input type="text" name="module_affiliate_payout_limit"
                                   value="{{ module_affiliate_payout_limit }}" placeholder="{{ entry_min_withdraw }}"
                                   id="input-meta-title" class="form-control"/>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}
